<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link rel="icon" href="~/Images/favicon_logo.png">
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="my-navbar navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="row">
                <div class="navbar-header col-md-2">
                    <div class="logo-wrapper">
                        <a href="/Home/Index"></a><img class="logo img-responsive" src="~/Images/transparent_logo.png" /></a>
                    </div>
                </div>
                <div class="navbar-search col-md-5">
                    <div class="input-group">
                        <input type="text" class="form-control search" name="search" placeholder="Tìm kiếm sản phẩm">
                        <div class="input-group-btn">
                            <button class="btn btn-default" type="submit">
                                <i class="glyphicon glyphicon-search"></i>
                            </button>
                        </div>
                    </div>
                </div>
                <div class="navbar-user navbar-collapse collapse col-md-5">
                    <ul class="nav navbar-nav">
                        <li><a href="#" data-toggle="modal" data-target="#loginModal">Đăng nhập</a></li>
                        <li><a href="#" data-toggle="modal" data-target="#registerModal">Đăng ký</a></li>
                    </ul>
                </div>
            </div>
            <div class="row">
                <div class="col-md-2 form-group">
                    <select class="form-control">
                        <option>Chọn loại hàng</option>
                    </select>
                </div>
                <div class="col-md-10">
                    <div class="navbar-hashtag">
                        <div><i class="glyphicon glyphicon-stats"></i></div>
                        <div><a href="#">#iphone</a></div>
                        <div><a href="#">#u23</a></div>
                        <div><a href="#">#honda</a></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!--Login Modal-->
    <div id="loginModal" class="modal fade myModal" role="dialog">
        <div class="modal-dialog">
            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">ĐĂNG NHẬP</h4>
                </div>
                <div class="modal-body">
                    <form class="form-horizontal" name="loginForm">
                        <div class="form-group">
                            <input type="text" class="form-control" id="login_username" name="username" placeholder="Tài khoản">
                        </div>
                        <div class="form-group">
                            <input type="password" class="form-control" id="login_password" name="password" placeholder="Mật khẩu">
                        </div>
                        <div class="form-group">
                            <div class="checkbox">
                                <label><input type="checkbox" name="keepIn">Duy trì đăng nhập</label>
                            </div>
                        </div>
                        <button type="submit" id="loginBtn" class="btn btn-default">ĐĂNG NHẬP</button>
                        <div class="form-group">
                            <a href="#" data-toggle="modal" data-target="#registerModal">Đăng ký ngay</a>
                        </div>
                    </form>
                </div>
            </div>

        </div>
    </div>

    <!--Register Modal-->
    <div id="registerModal" class="modal fade myModal" role="dialog">
        <div class="modal-dialog">
            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">ĐĂNG KÝ</h4>
                </div>
                <div class="modal-body">
                    <form class="form-horizontal" action="">
                        <div class="form-group">
                            <input type="text" class="form-control" id="register_username" placeholder="Tài khoản">
                        </div>
                        <div class="form-group">
                            <input type="password" class="form-control" id="register_password" placeholder="Mật khẩu">
                        </div>
                        <div class="form-group">
                            <input type="password" class="form-control" id="confirm-password" placeholder="Xác nhận mật khẩu">
                        </div>
                        <div class="form-group">
                            <input type="email" class="form-control" id="email" placeholder="Email">
                        </div>
                        <div class="form-group">
                            <input type="tel" class="form-control" id="phone" placeholder="Số điện thoai">
                        </div>
                        <button type="submit" id="registerBtn" class="btn btn-default">ĐĂNG KÝ</button>
                        <div class="form-group">
                            <a href="#" data-toggle="modal" data-target="#loginModal">Đăng nhập</a>
                        </div>
                    </form>
                </div>
            </div>

        </div>
    </div>

    <div class="container body-content">
        @RenderBody()
    </div>
    <hr />
    <footer>
        <div class="container">
            <div class="row">
                <div class="col-md-3">
                    <h3>About us</h3>
                    <ul>
                        <li>Nhóm 3</li>
                        <li>Nhập môn công nghệ phần mềm</li>
                        <li>CQ2017/33</li>
                    </ul>
                </div>
                <div class="col-md-3">
                    <h3>Đây là gì ???</h3>
                    <ul>
                        <li>Đồ án Website mua bán đồ cũ</li>
                    </ul>
                </div>
                <div class="col-md-3">
                    <h3>Facebook</h3>
                    <ul></ul>
                </div>
                <div class="col-md-3">
                    <div class="logo-wrapper">
                        <a href="/Home/Index"></a><img class="logo img-responsive" src="~/Images/transparent_logo.png" /></a>
                    </div>
                </div>
            </div>
        </div>
        <hr style="border: 1px solid #AAAAAA;" />
        <p class="copy-right text-center">&copy; @DateTime.Now.Year Nhóm 3 Nhập môn Công nghệ phần mềm CQ2017/33 </p>
    </footer>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/constants")
    @Scripts.Render("~/bundles/sharedScripts")
    @RenderSection("scripts", required: false)

</body>
</html>
